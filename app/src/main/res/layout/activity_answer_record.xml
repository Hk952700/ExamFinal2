    <Button
        android:id="@+id/btn_answer_record_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_640"
        android:background="@drawable/selector_answer_record_confirm_bg" />

    <LinearLayout
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_91"
        android:layout_marginLeft="@dimen/dp_163"
        android:layout_marginTop="@dimen/dp_138"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/answer_record_user_score_hundreds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/answer_record_user_score_tens"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView

            android:id="@+id/answer_record_user_score_ones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:scaleType="fitXY"
            android:src="@drawable/img_score_text" />
    </LinearLayout>


    <TextView
        android:id="@+id/answer_record_user_name"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_32"
        android:layout_marginLeft="@dimen/dp_164"
        android:layout_marginTop="@dimen/dp_240"
        android:gravity="center"
        android:text="Name"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/sp_20" />

    <TextView
        android:id="@+id/answer_record_user_numberplate"
        android:layout_width="@dimen/dp_136"
        android:layout_height="@dimen/dp_32"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_165"
        android:layout_marginRight="@dimen/dp_145"
        android:gravity="left"
        android:paddingLeft="@dimen/dp_5"
        android:text="NumberPlate"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/sp_20" />

    <TextView
        android:id="@+id/answer_record_user_time"
        android:layout_width="@dimen/dp_136"
        android:layout_height="@dimen/dp_32"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_204"
        android:layout_marginRight="@dimen/dp_145"
        android:gravity="left"
        android:text="Time"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/sp_20" />

    <TextView
        android:id="@+id/answer_record_user_accuracy"
        android:layout_width="@dimen/dp_136"
        android:layout_height="@dimen/dp_32"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_236"
        android:layout_marginRight="@dimen/dp_145"
        android:gravity="left"
        android:text="Accuracy"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/sp_20" />


    <RelativeLayout
        android:id="@+id/answer_record_websocket_status"
        android:layout_width="@dimen/dp_10"
        android:layout_height="@dimen/dp_10" />

    <Button
        android:id="@+id/btn_answer_record_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:text="重试" />
</RelativeLayout>