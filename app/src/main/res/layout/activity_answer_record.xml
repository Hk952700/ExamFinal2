    <RelativeLayout
        android:layout_width="@dimen/dp_1214"
        android:layout_height="@dimen/dp_600"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_125">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/answer_record_list_bg"
            android:scaleType="fitXY" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/answer_record_rv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_120"
            android:layout_marginTop="@dimen/dp_185" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/answer_record_rv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_185"
            android:layout_toRightOf="@+id/answer_record_rv1" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/answer_record_rv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_185"
            android:layout_toRightOf="@+id/answer_record_rv2" />
    </RelativeLayout>

